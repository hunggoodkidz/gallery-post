generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id          String    @id @default(cuid())
  imageBase64 String
  comments    Comment[]
  createdAt   DateTime  @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  photo     Photo    @relation(fields: [photoId], references: [id])
  photoId   String
  createdAt DateTime @default(now())
}